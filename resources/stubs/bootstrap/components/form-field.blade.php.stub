@php
function html_attributes($attributes) {
    $html = [];
    foreach ($attributes as $key => $value) {
        if (is_bool($value)) {
            if ($value) {
                $html[] = $key;
            }
        } elseif ($value !== null && $value !== '') {
            $html[] = $key . '="' . htmlspecialchars($value, ENT_QUOTES) . '"';
        }
    }
    return implode(' ', $html);
}
